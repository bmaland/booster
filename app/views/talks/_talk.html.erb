<div class="talk" id="<%= dom_id(talk) %>">
  <h3>
      <%= link_to h(talk.title), talk %>
      (<%= h(talk.talk_type.name) %>)
      <%= "(#{num_of_votes(talk.votes_count)})" if talk.votes_count > 0 %>
      <%= image_tag("approved_talk.png") if talk.accepted? %>
      <%= image_tag("icon_slides.gif") if admin? && talk.slide.file? %>
  </h3>

  <div class="submitted_time">
    <%= link_to "#{talk.comments_count or 0} comment(s).", talk_path(talk, :anchor => "comments") %>
    Suggested by <%= talk.users.map { |u| u.name }.join(", ") %> <%= time_ago_in_words(talk.created_at) %> ago.
    <%= "<br/> Max number of participants: " + h(talk.max_participants) if admin? %>
    <%# render :partial => talk.users %>
  </div>

  <% unless talk.tags.size == 0 %>
      <div class="tags">
        Tags: |
        <% talk.tags.each do |tag| %>
            <%= link_to tag.title, :controller=>"talks", :action=>"article_tags", :id=>tag.id %> |
        <% end %>

      </div>
  <% end %>

</div>
