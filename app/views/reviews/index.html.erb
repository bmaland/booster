<h1>Listing reviews</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Talk</th>
    <th>Type</th>
    <th>Reviews</th>
    <th>&nbsp;</th>
  </tr>
</thead>
<tbody>
<% @talks_with_reviews.each do |talk, reviews| %>
  <tr>
    <td><%= talk.title %></td>
    <td><%= talk.type %></td>
    <td>
      <% reviews.each do |review| %>
        <div>
            &quot;<%= truncate(review.text, :length => 50) %>&quot; by <em><%= review.reviewer.name %></em>
        </div>
      <% end %>
    </td>
    <td><%= link_to 'Show', talk %></td>
  </tr>
<% end %>
</tbody>
</table>