<div id="<%= dom_id(comment) %>" class="comment">
  <h4><%=
      link_to_unless current_page?(:controller => 'talks', :action => "show", :id => comment.talk),
                     h(comment.title),
                     :controller => "talks", :action => "show", :id => comment.talk, :anchor => dom_id(comment) %></h4>

  <div><%= simple_format h(comment.description) %></div>

  <div class="detail">Written by <%= link_to_if admin?, h(comment.user.name),
                                                h(comment.user) %>,
    <%= time_ago_in_words comment.created_at %> ago
  </div>

</div>