<h1>Editing sponsor</h1>

<%= render 'form' %>

<legend>Comments</legend>

<div id="new_comment">
  <%= form_for [@sponsor, @event], :html => {:class => "form-inline"}, :remote => true do |f| %>

      <%= f.text_area :comment, :class => "input-xxlarge", :cols => 30, :rows => 8 %>
      <%= f.submit "Add comment", :class => "btn" %>

  <% end %>
</div>

<div id="comments">
  <%= render @sponsor.events %>
</div>

<%= link_to 'Show', @sponsor %> |
<%= link_to 'Back', sponsors_path %>
