<h1>Edit slot</h1>

<% form_for(@slot) do |f| %>
    <% if @slot.errors %>
        <ul>
          <% @slot.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <p>
      <%= f.label :room %><br />
      <%= f.select :room, @rooms %>
    </p>

    <p>
      <%= f.label :period %><br />

      <%= f.collection_select :period_id, @periods, :id, :to_s %>
    </p>

    <p>
      <%= f.label :talk %><br />
      <%= f.collection_select :talk_id, @talks, :id, :title %>
    </p>

    <p>
      <%= f.submit 'Save' %>
    </p>
<% end %>

<%= link_to 'Back', slots_path %>